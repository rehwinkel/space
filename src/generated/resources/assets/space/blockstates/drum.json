{
  "multipart": [
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "space:block/drum"
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "space:block/drum",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "space:block/drum",
        "y": 270
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "space:block/drum",
        "y": 90
      }
    },
    {
      "when": {
        "up": "true"
      },
      "apply": {
        "model": "space:block/connector_short",
        "x": 270
      }
    }
  ]
}